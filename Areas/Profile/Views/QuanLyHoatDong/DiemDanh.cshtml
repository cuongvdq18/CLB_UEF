@model IList<ClubPortalMS.Models.DiemDanhCLBViewModel>
@{
    //var DsthanhVienHD = (IList<ClubPortalMS.Models.DiemDanhCLBViewModel>)ViewBag.DsthanhVienHD;
    ViewBag.Title = "Quản lý hoạt động";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
   string[] TableHeaders = new string[] {"STT","MSSV"
                        ,"Tên "
                        ,"Điểm danh"
                        };
}


<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Quản lý hoạt động</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("DiemDanh", "QuanLyHoatDong", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="x-editable-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="x-editable-list" style="height:auto">
                            <div class="alert-title">
                                <h2>Điểm danh hoạt động</h2>
                            </div>
                            <div class="col-12 table table-responsive">
                                <table id="myTable" class="table table-striped table table-bordered table-hover table-sm">
                                    <thead>
                                        <tr>
                                            @foreach (var head in TableHeaders)
                                            {
                                                <th>
                                                    @head
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>

                                                <td>@(i+1)</td>
                                                @Html.HiddenFor(model => Model[i].ID)
                                                <td>@Model[i].ThanhVien_CLB.ThanhVien.MSSV</td>
                                                <td>@Model[i].ThanhVien_CLB.ThanhVien.Ho @Model[i].ThanhVien_CLB.ThanhVien.Ten</td>
                                                <td>@Html.CheckBoxFor(model => Model[i].DiemDanh)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <input style="margin-top:1%" class=" btn btn-primary" type="submit" value="Xác nhận" />
                                <div style="float:right;margin-top:3%">
                                    @Html.ActionLink("Quay lại", "XemHD", new { id = ViewBag.IdHD })
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        
    }
