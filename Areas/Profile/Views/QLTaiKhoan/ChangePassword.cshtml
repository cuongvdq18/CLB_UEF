@model ClubPortalMS.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}
<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">                    
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Tài khoản</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="single-pro-review-area mt-t-30 mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 style-center-form">
                    <div class="product-payment-inner-st">
                        <ul id="myTabedu1" class="tab-review-design">
                            <li class="active"><a>Đổi mật khẩu</a></li>
                        </ul>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.Message</strong>
                            </div>
                        }
                        @if (ViewBag.Messages != null)
                        {
                            <div class="alert alert-danger">
                                <strong>@ViewBag.Messages</strong>
                            </div>
                        }
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="INFORMATION">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="devit-card-custom">
                                                        <label>Mật khẩu hiện tại</label>
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", type = "password", id = "current-password" })
                                                        </div>
                                                        <label>Mật khẩu mới</label>
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", type = "password", id = "new-password" })
                                                        </div>
                                                        <label>Xác thực mật khẩu</label>
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", id = "confirm-new-password" })
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="checkbox" id="show-passwords" name="show-passwords"> Hiển thị mật khẩu
                                                        </div>
                                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Xác nhận</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const toggle = document.querySelector('#show-passwords');

        const passwords = Array.from(
            document.querySelectorAll('[type="password"]')
        );

        function togglePassword(checkbox, field) {
            field.type = checkbox.checked ? 'text' : 'password';
        }

        function handleChange() {
            passwords.forEach(password => {
                togglePassword(this, password);
            });
        }

        toggle.addEventListener('change', handleChange);
    </script>
}
