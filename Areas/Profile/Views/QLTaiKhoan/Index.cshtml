@model ClubPortalMS.Models.DBUser

@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}
<link rel="stylesheet" href="~/Areas/Profile/Resource/css/adminlte.min.css">
<div class="header-advance-area-style" style="margin-bottom:-5%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                    @*<form role="search" class="sr-input-func">
                                            <input type="text" placeholder="Search..." class="search-int form-control">
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </form>*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Tài khoản</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" style="background-color: #f6f8fa;">
    <div class="row">
        <div class="col-md-12">
            <div class="timeline" style="margin:3% 0 3% 0;font-size:20px">
                <div>
                    <i class="fa fa-envelope" style="background-color: dodgerblue; color: white" aria-hidden="true"></i>
                    <div class="timeline-item">
                        <h3 class="timeline-header">Email</h3>
                        <span class="timeline-footer time" style="margin-right:20px">
                            @if (Model.EmailConfirmation != true)
                            {
                                <a href="@Url.Action("ConfirmButton", new { id = Model.ID })" style="width:120px" class="btn btn-primary btn-sm">Xác thực Email</a>
                            }
                            <a href="@Url.Action("ChangeEmail", new { id = Model.ID })" style="width:120px" class="btn btn-danger btn-sm">Đổi Email</a>
                        </span>
                        <div class="timeline-body" style="height:50px">
                            @Html.DisplayFor(model => model.Email)
                        </div>

                    </div>
                </div>

                <div>
                    <i class="fa fa-user" style="background-color:forestgreen; color:white" aria-hidden="true"></i>
                    <div class="timeline-item">
                        <h3 class="timeline-header no-border">Mật khẩu</h3>
                        <span class="timeline-footer time" style="margin-right:20px">
                            <a href="@Url.Action("ChangePassword", new { id = Model.ID })" style="width:120px" class="btn btn-danger btn-sm">Đổi Mật khẩu</a>
                        </span>
                        <div class="timeline-body" style="height:50px">
                            ***************
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


