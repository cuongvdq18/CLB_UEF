
@model ClubPortalMS.Models.LichTap

@{
    ViewBag.Title = "Sửa lịch tập";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}


<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Quản lý Lịch hoạt động</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card" style="background-color:white;padding:30px 30px 30px 30px">
            <div class="card-header p-2" style="margin-bottom:30px">
                <h3> Sửa lịch hoạt động</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="tab-pane active" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Tiêu đề:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control",
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập tiêu đề')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Thời gian bắt đầu:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control", type = "date",
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập thời gian bắt đầu')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                               </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Thời gian kết thúc:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", type = "date",
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập thời gian kết thúc')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Địa điểm:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control",
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập địa điểm')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Câu lạc bộ:</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("IdCLB", ViewBag.DsCLB as SelectList, "Chọn Câu lạc bộ", new { @class = "form-control",
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng chọn câu lạc bộ')",
                                   oninput = "this.setCustomValidity('')"
                               })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Xác nhận</button>
                                </div>
                            </div>
                            @Html.ActionLink("Quay lại", "XemLT", new { id = Model.ID })
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}