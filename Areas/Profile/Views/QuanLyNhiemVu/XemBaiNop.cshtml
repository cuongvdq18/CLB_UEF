@using (Html.BeginForm("XemBaiNop", "QuanLyNhiemVu", FormMethod.Post))
{
    <div class="x-editable-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline13-list">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h1>Quản lý <span class="table-project-n">Bài</span> Nộp</h1>
                            </div>
                        </div>

                        <div class="sparkline13-graph">
                            <div class="datatable-dashv1-list custom-datatable-overright">

                                <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                       data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                    <thead>
                                        <tr>
                                            <th data-field="state" data-checkbox="true"></th>
                                            <th data-field="Tiêu đề" data-editable="true">Tiêu đề</th>
                                            <th data-field="Tên" data-editable="true">Tên</th>
                                            <th data-field="MSSV" data-editable="true">MSSV</th>
                                            <th data-field="File nộp">File nộp</th>
                                            <th data-field="Ghi chú" data-editable="true">Ghi chú</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.DsthanhVienNV)
                                        {
                                        <tr class="sacss">
                                            <td>@item.NhiemVu_ThanhVien.ID</td>
                                            <td>@item.NhiemVu_ThanhVien.NhiemVu.TieuDe</td>
                                            <td>@item.ThanhVien_CLB.ThanhVien.Ho @item.ThanhVien_CLB.ThanhVien.Ten</td>
                                            <td>@item.ThanhVien_CLB.ThanhVien.MSSV</td>

                                            @if (item.NhiemVu_ThanhVien.FileNop == null)
                                            {
                                                <td>Chưa nộp</td>
                                            }
                                            else
                                            {
                                                <td><a href="@Url.Action("DocumentExDownload", "QuanLyNhiemVu", new { id = item.NhiemVu_ThanhVien.ID })" class="link-black text-sm"><i class="fas fa-link mr-1"></i>>@item.NhiemVu_ThanhVien.TenFileNop</a></td>

                                            }
                                            <td>@item.NhiemVu_ThanhVien.GhiChu</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div style="margin-top:1%"> @Html.ActionLink("Quay lại", "XemNV", new { id = ViewBag.IDNV })</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
