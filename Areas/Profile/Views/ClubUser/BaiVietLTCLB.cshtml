@model ClubPortalMS.Models.LichTap

@{
    ViewBag.Title = "BaiVietHDCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Quản lý lịch hoạt động</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="x-editable-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x-editable-list">
                    <div class="alert-title">
                        <h2>Thông tin chi tiết</h2>

                    </div>
                    <table id="user" class="table table-bordered table-striped x-editor-custom">
                        <tbody>
                            <tr>
                                <td>Tiêu đề lịch hoạt động</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.TieuDe)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Thời gian bắt đầu</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.NgayBatDau)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Thời gian kết thúc</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.NgayKetThuc)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Địa điểm</td>
                                <td>
                                    <a href="#" id="firstname" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.DiaDiem)</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    <div style="margin-top:2%"> @Html.ActionLink("Quay lại", "LichTap", new { id = Model.IdCLB })</div>

                </div>
            </div>
        </div>
    </div>
</div>
