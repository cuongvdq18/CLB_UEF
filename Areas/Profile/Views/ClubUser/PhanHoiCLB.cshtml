@model ClubPortalMS.Models.PhanHoiViewModel

@{
    ViewBag.Title = "PhanHoiCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}


<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                   
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Phản hồi</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="advanced-form-area mg-b-15">
        <div class="container-fluid">
            <div class="col-md-12" style="background-color:white">
                <div class="card">
                    
                    <div class="main-sparkline12-hd" style="margin:20px 0 40px 0">
                        <h4> Đơn phản hồi</h4>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            @if (ViewBag.Messsage != null)
                            {
                                <div class="alert alert-success">
                                    <strong>@ViewBag.Messsage</strong>
                                </div>
                            }
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="tab-pane active" id="settings" style="width:80%; margin-left:10%">
                                <form class="form-horizontal">
                                    @if (ViewBag.Messages != null)
                                    {
                                        <div class="alert alert-success alert-st-one" role="alert">
                                            <i class="fa fa-check edu-checked-pro admin-check-pro" aria-hidden="true"></i>
                                            <p class="message-mg-rt"><strong>Đã gửi!</strong>@ViewBag.Messages.</p>
                                        </div>
                                    }
                                    <div class="form-group row">
                                        <label for="inputEmail" class="col-sm-2 col-form-label">Nội dung:</label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control",
                                           required = "required",
                                           oninvalid = "this.setCustomValidity('Xin vui lòng nhập nội dung')",
                                           oninput = "this.setCustomValidity('')"
                                       } })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputName2" class="col-sm-2 col-form-label">Câu lạc bộ:</label>
                                        <div class="col-sm-10">
                                            @Html.DropDownList("IdCLB", ViewBag.DsCLB as SelectList, "Chọn Câu lạc bộ", new { @class = "form-control",
                                           required = "required",
                                           oninvalid = "this.setCustomValidity('Xin vui lòng chọn câu lạc bộ')",
                                           oninput = "this.setCustomValidity('')"
                                       })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-sm-2 col-sm-10">
                                            <button type="submit" class="btn btn-danger">Xác nhận</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
