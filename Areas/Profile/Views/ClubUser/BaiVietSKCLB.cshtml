@model ClubPortalMS.Models.SuKien
@{
    ViewBag.Title = "BaiVietSKCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Quản lý sự kiện</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="x-editable-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x-editable-list" >
                    <div class="alert-title">
                        <h2>Thông tin chi tiết</h2>
                    </div>
                    <table id="user" class="table table-bordered table-striped x-editor-custom">
                        <tbody>
                            <tr>
                                <td>Tiêu đề sự kiện</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.TieuDeSK)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Mô tả</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.MoTa)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Nội dung</td>
                                <td>
                                    <a href="#" id="username" data-type="text" data-pk="1"> @Html.DisplayFor(model => model.NoiDung)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Ngày bắt đầu</td>
                                <td>
                                    <a href="#" id="firstname" data-type="text" data-pk="1" data-placement="right" data-placeholder="Required" data-title="Enter your firstname"> @Html.DisplayFor(model => model.NgayBatDau)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Ngày kết thúc</td>
                                <td>
                                    <a href="#" id="status" data-type="select" data-pk="1" data-value=""> @Html.DisplayFor(model => model.NgayKetThuc)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Địa điểm</td>
                                <td>
                                    <a href="#" id="status" data-type="select" data-pk="1" data-value=""> @Html.DisplayFor(model => model.DiaDiem)</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Loại sự kiện</td>
                                <td>
                                    <a href="#" id="status" data-type="select" data-pk="1" data-value=""> @Html.DisplayFor(model => model.LoaiSuKien.TenLoaiSK)</a>
                                </td>
                            </tr>

                            @if (Model.File == null)
                            {
                                <tr>
                                    <th>File đính kèm:</th>
                                    <td class="details-profile"> Trống</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>File đính kèm</td>
                                    <td>
                                        <a href="@Url.Action("DocumentDownload", new { id = Model.ID})" id="status" data-type="select" data-pk="1" data-value=""> @Html.DisplayFor(model => model.TenFile)</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                    <div style="margin-top:2%"> @Html.ActionLink("Quay lại", "SuKienCLB", new { id = Model.IdCLB })</div>

                </div>
            </div>
        </div>
    </div>
</div>
