@model ClubPortalMS.Models.DkyCLB

@{
    ViewBag.Title = "Đăng ký thành lập CLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}
<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Xét duyệt thành lập CLB</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="col-md-12">
    <div class="card" style="background-color:white;padding:30px 30px 30px 30px">
        <div class="card-header p-2">
            <h5> Đơn đăng ký thành lập Câu lạc bộ</h5>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="tab-content">
                @if (ViewBag.Messsage != null)
                {
                    <div class="alert alert-success">
                        <strong>@ViewBag.Messsage</strong>
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="tab-pane active" id="settings">
                    <form class="form-horizontal">
                        <div class="form-group row">
                            <label for="inputName" class="col-sm-2 col-form-label">Tên câu lạc bộ:</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.TenCLB, new { htmlAttributes = new { @class = "form-control",
                               required = "required",
                               oninvalid = "this.setCustomValidity('Xin vui lòng nhập Tên câu lạc bộ')",
                               oninput = "this.setCustomValidity('')"
                           } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Loại câu lạc bộ:</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("IDLoaiCLB", null,"Chọn loại câu lạc bộ", htmlAttributes: new { @class = "form-control",
                               required = "required",
                               oninvalid = "this.setCustomValidity('Xin vui lòng nhập loại câu lạc bộ')",
                               oninput = "this.setCustomValidity('')"
                           })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputName2" class="col-sm-2 col-form-label">Lý do thành lập:</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.LyDoThanhLap, new { htmlAttributes = new { @class = "form-control", type = "textarea",
                               required = "required",
                               oninvalid = "this.setCustomValidity('Xin vui lòng nhập lý do thành lập')",
                               oninput = "this.setCustomValidity('')"
                           } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10">
                                <button type="submit" class="btn btn-danger">Xác nhận</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
}
