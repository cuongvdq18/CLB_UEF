@model ClubPortalMS.Models.CLB

@{
    ViewBag.Title = "ChiTietCLB";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}
<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Câu lạc bộ</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-details-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="blog-details-inner">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="latest-blog-single blog-single-full-view">
                                <div class="blog-image">
                                    <a href="#">
                                        <img style="width:1250px;height:460px;" src="@Model.HinhCLB" alt="" />
                                    </a>
                                    <div class="blog-date">
                                        <p><span class="blog-day">@DateTime.Now.ToString("dd")</span> @DateTime.Now.ToString("MMM")</p>
                                    </div>
                                </div>
                                <div class="blog-details blog-sig-details">
                                    <div class="details-blog-dt blog-sig-details-dt courses-info mobile-sm-d-n">
                                        <span><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i><b> Ngày thành lập:</b> @Html.DisplayFor(model => model.NgayThanhLap)</a></span>
                                    </div>
                                    <h1><a class="blog-ht" href="#">  @Html.DisplayFor(model => model.TenCLB)</a></h1>
                                    <p>
                                        @Html.DisplayFor(model => model.Mota)
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="user-comment">
                                <img src="img/contact/1.jpg" alt="" />
                                <div class="comment-details">
                                    <h4></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="user-comment">

                                <div class="comment-details">
                                    @if (Model.LienHe == null)
                                    {
                                        <p>Địa chỉ liên hệ: Đang cập nhật...</p>
                                    }
                                    else
                                    {
                                        <p>
                                            @Html.DisplayFor(model => model.LienHe)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="user-comment">
                               
                                <div class="comment-details">
                                    @if (Model.Email == null)
                                    {
                                        <p>Email liên hệ: Đang cập nhật...</p>
                                    }
                                    else
                                    {
                                        <p>
                                            @Html.DisplayFor(model => model.Email)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="user-comment">
                            
                                <div class="comment-details">
                                    @if (Model.FanPage == null)
                                    {
                                        <p>Fanpage: Đang cập nhật...</p>
                                    }
                                    else
                                    {
                                        <p>
                                            @Html.DisplayFor(model => model.FanPage)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.ActionLink("Quay lại","DSCLB")
                </div>
            </div>
        </div>
    </div>
</div>

