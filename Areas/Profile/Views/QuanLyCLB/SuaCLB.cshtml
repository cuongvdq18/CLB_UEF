@model ClubPortalMS.Models.CLBViewModels
@{
    ViewBag.Title = "Quản lý câu lạc bộ";
    Layout = "~/Areas/Profile/Views/Shared/_LayoutProfile.cshtml";
}

<div class="header-advance-area-style" style="margin-top:3%">
    <div class="breadcome-area">
        <div class="container-fluids">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list single-page-breadcome">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcome-heading">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <ul class="breadcome-menu">
                                    <li>
                                        <a href="#">Trang chủ</a> <span class="bread-slash">/</span>
                                    </li>
                                    <li>
                                        <span class="bread-blod">Quản lý câu lạc bộ</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("SuaCLB", "QuanLyCLB", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card" style="background-color:white;padding:30px 30px 30px 30px">
            <div class="card-header p-2" style="margin-bottom:2%">
                <h3> Sửa câu lạc bộ</h3>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="tab-pane active" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Tên câu lạc bộ:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.TenCLB, new { htmlAttributes = new { @class = "form-control", Value = @ViewBag.CLB.TenCLB,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập tên câu lạc bộ')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Mô tả:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control", Value = @ViewBag.CLB.Mota,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập mô tả')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Ngày thành lập:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.NgayThanhLap, new { htmlAttributes = new { @class = "form-control", type = "date", Value = @ViewBag.CLB.NgayThanhLap,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập ngày thành lập')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Liên hệ:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.LienHe, new { htmlAttributes = new { @class = "form-control", Value = @ViewBag.CLB.LienHe,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập địa chỉ liên hệ')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Email:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Value = @ViewBag.CLB.Email,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng nhập email câu lạc bộ')",
                                   oninput = "this.setCustomValidity('')"
                               } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Fanpage:</label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.FanPage, new { htmlAttributes = new { @class = "form-control", Value = @ViewBag.CLB.FanPage
                               } })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Loại câu lạc bộ:</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("IdLoaiCLB", null, htmlAttributes: new { @class = "form-control", Value = @ViewBag.CLB.IdLoaiCLB,
                                   required = "required",
                                   oninvalid = "this.setCustomValidity('Xin vui lòng chọn câu lạc bộ')",
                                   oninput = "this.setCustomValidity('')"
                               })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName2" class="col-sm-2 col-form-label">Ảnh đại diện CLB:</label>
                                <div class="col-sm-10">
                                    <input type="file" name="ImageFile" />
                                </div>
                            </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">Xác nhận</button>
                                    </div>
                                </div>
                                @*@Html.ActionLink("Quay lại", "QLCLB", new { id = Model.ID })*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}