@model ClubPortalMS.ViewModel.Album.AlbumViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create","Albums",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Albums</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Albums</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">

                        <strong class="text-danger text-uppercase">Tạo ảnh mới vào Albums</strong>
                    </div>
                    <div class="col-md-6 text-right">
                       
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        <strong>@ViewBag.Message</strong>
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-4"> Tiêu đề</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" , placeholder = "Tiêu đề ảnh"} })
                        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4"> Hình ảnh</label>
                    <div class="col-md-10">
                        <img src="@Url.Content(Model.HinhAnh)" style="width: 100px; height: 100px; margin: 10px;" id="preView" />
                        <input type="file" name="ImageFile" onchange="ShowImg(this, document.getElementById('preView'))" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", placeholder = "Mô tả ảnh" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm" class="btn btn-default" />
                    </div>
                </div>
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </section>
</div>
}