@model IEnumerable<ClubPortalMS.ViewModel.User.RoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper my-2">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Vai trò</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Vai trò</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class=" col-sm-9">

                                    <h3 class="card-title">Quản lý Vai trò</h3>
                                </div>

                                <div class=" col-sm-3">
                                    <a class="btn btn-info btn-block btn-flat" style="border-radius: 4px;" type="button" href="@Url.Action("Create")">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i> Thêm mới
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="table1" class="table table-bordered table-striped">

                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Vai trò</th>
                                        <th>Mô tả</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.ID
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.Name
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.MoTa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>STT</th>
                                        <th>Vai trò</th>
                                        <th>Mô tả</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                        </div>
                    </div>
        </div>
    </section>
</div>

