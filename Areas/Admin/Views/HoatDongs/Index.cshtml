@model IEnumerable<ClubPortalMS.ViewModel.HoatDong.HoatDongsViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Hoạt động</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Hoạt động</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class=" col-sm-9">
                                    <h3 class="card-title">Quản lý Hoạt động</h3>
                                </div>
                                <div class=" col-sm-3">
                                    <a class="btn btn-info btn-block btn-flat" style="border-radius: 4px;" type="button" href="@Url.Action("Create")">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i> Thêm Hoạt động
                                    </a>
                                </div>
                            </div>
                        </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="table1" class="table table-bordered table-striped">

                                        <thead>
                                            <tr>
                                                <th>Tiêu đề</th>
                                                <th>Mô tả</th>
                                                <th>Ngày đăng</th>
                                                <th>Ảnh bài viết</th>
                                                <th>Tác giả</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Details", new { id = item.ID })" class="gioi-han" style="width:200px">
                                                            @item.Ten
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Details", new { id = item.ID })" class="gioi-han" style="width:200px">
                                                            @item.MoTa
                                                        </a>
                                                    </td>
                                                    <td>
                                                        @item.NgayDang
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Details", new { id = item.ID })">
                                                            <img src="@Url.Content(item.HinhAnhBaiViet)" style="max-width: 400px; max-height: 200px;" />
                                                        </a>
                                                    </td>

                                                    <td>
                                                        @item.TenNguoiDang
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Tiêu đề</th>
                                                <th>Mô tả</th>
                                                <th>Ngày đăng</th>
                                                <th>Ảnh bài viết</th>
                                                <th>Tác giả</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
    </section>
</div>
