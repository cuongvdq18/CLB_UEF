@model ClubPortalMS.ViewModel.HoatDong.HoatDongsViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "HoatDongs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Hoạt động</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Hoạt động</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-12">
                            <strong class="text-danger text-uppercase">Tạo mới</strong>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Message</strong>
                        </div>
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-4"> Tiêu đề</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control", placeholder = "Tiêu đề" } })
                            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4"> Mô tả</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", rows = "15", placeholder = "Mô tả" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4"> Hình ảnh bài viết</label>
                        @Html.ValidationMessageFor(model => model.HinhAnhBaiViet, "", new { @class = "text-danger" })
                        <div class="col-md-10">
                            <img src="@Url.Content(Model.HinhAnhBaiViet)" style="width: 100px; height: 100px; margin: 10px;" id="preView" />
                            <input type="file" name="ImageFile" onchange="ShowImg(this, document.getElementById('preView'))" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4"> Hình ảnh chi tiết</label>
                        @Html.ValidationMessageFor(model => model.HinhAnhChiTiet, "", new { @class = "text-danger" })
                        <div class="col-md-10">
                            <img src="@Url.Content(Model.HinhAnhChiTiet)" style="width: 100px; height: 100px; margin: 10px;" id="preView" />
                            <input type="file" name="ImageDetailFile" onchange="ShowImg(this, document.getElementById('preView'))" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4"> Tác giả</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenNguoiDang, new { htmlAttributes = new { @class = "form-control", placeholder = "Tác giả" } })
                            @Html.ValidationMessageFor(model => model.TenNguoiDang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Tạo" class="btn btn-default" />
                        </div>
                    </div>
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}