@model ClubPortalMS.ViewModel.ThongBao.ThongBaosViewModels
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "ThongBaos", System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Thông báo</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Thông báo</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-12">
                            <strong class="text-danger text-uppercase">Chỉnh Sửa</strong>
                        </div>

                    </div>
                </div>
                <div class="card-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Message</strong>
                        </div>
                    }
                    <div class="form-group row">
                        <label for="inputName" class="col-sm-2 col-form-label">Tiêu đề:</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail" class="col-sm-2 col-form-label">Mô tả:</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputName2" class="col-sm-2 col-form-label">Thời gian bắt đầu:</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.NgayThongBao, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.NgayThongBao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputName2" class="col-sm-2 col-form-label">Nội dung:</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputName2" class="col-sm-2 col-form-label">Câu lạc bộ:</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("IdCLB", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdCLB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @if (Model.File == null)
                    {
                        <div class="form-group row">
                            <label for="inputName2" class="col-sm-2 col-form-label">Tệp đính kèm:</label>
                            <div class="col-sm-10">
                                <input type="file" id="upload" name="upload" />
                                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="form-group row">
                            <label for="inputName2" class="col-sm-2 col-form-label">Tệp đính kèm:</label>
                            <div class="col-sm-1 control-label">
                                <a href=@Url.Action("DocumentDownloadFileDinhKem", new { id = Model.ID})>@Model.TenFile</a>
                            </div>
                            <div class="col-sm-6">
                                <input type="file" id="upload" name="upload" />
                                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu lại" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            @Html.ActionLink("Quay lại", "Details", new { id = Model.ID })
            <!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

}
