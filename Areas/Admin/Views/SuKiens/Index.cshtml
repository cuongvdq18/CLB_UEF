@model IEnumerable<ClubPortalMS.ViewModel.Sukien.SuKiensViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sự kiện</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sự kiện</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-sm-9">
                                    <h3 class="card-title">Quản lý Sự kiện</h3>
                                </div>
                                <div class="col-sm-3">
                                    <a class="btn btn-info btn-block btn-flat" style="border-radius: 4px;" type="button" href="@Url.Action("Create")">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i> Thêm sự kiện
                                    </a>
                                </div>
                            </div>
                            
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="table1" class="table table-bordered table-striped">

                                <thead>
                                    <tr>
                                        <th>Câu lạc bộ</th>
                                        <th>Tiêu đề</th>
                                        <th>Mô tả</th>
                                        <th>Tệp đính kèm</th>
                                        <th>Thời gian bắt đầu</th>
                                        <th>Thời gian kết thúc</th>
                                        <th>Loại Sự kiện</th>
                                        <th>Địa điểm</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.CLB
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.TieuDeSK
                                                </a>
                                            </td>
                                            <td>
                                                @item.MoTa
                                            </td>
                                            <td>
                                                <a href="@Url.Action("DocumentDownload", new { id = item.ID })">@item.TenFile</a>
                                            </td>
                                            <td>@item.NgayBatDau</td>
                                            <td>@item.NgayKetThuc</td>
                                            <td>@item.LoaiSK</td>
                                            <td>@item.DiaDiem</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Câu lạc bộ</th>
                                        <th>Tiêu đề</th>
                                        <th>Mô tả</th>
                                        <th>Tệp đính kèm</th>
                                        <th>Thời gian bắt đầu</th>
                                        <th>Thời gian kết thúc</th>
                                        <th>Loại Sự kiện</th>
                                        <th>Địa điểm</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>