@model IEnumerable<ClubPortalMS.Models.CLBDaThamGiaViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thành Viên</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thành viên</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
    
                    <!-- AREA CHART -->
                    @foreach (var item in Model)
                    {
                      
                    <div class="col-lg-4 col-8">
                        <a href="@Url.Action("Index", new {id = item.IDCLB})">
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">@item.TenCLB</h3>
                                </div>
                                <div class="card-body">
                                    <div class="chart">
                                        <img src="@item.HinhCLB" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;" />
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                       
                     }
            
             </div>
        </div>
    </section>
</div>
