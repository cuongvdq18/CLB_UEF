@model IEnumerable<ClubPortalMS.ViewModel.CLB.CLBViewModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Câu lạc bộ</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Câu lạc bộ</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Quản lý Câu lạc bộ</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="table1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Loại Câu lạc bộ</th>
                                        <th>Tên Câu lạc bộ</th>
                                        <th>Liên hệ</th>
                                        <th>FanPage</th>
                                        <th>Email</th>
                                        <th>Ngày thành lập</th>
                                        <th>Ảnh đại diện</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details","LoaiCLBs" ,new { id = item.ID })">
                                                    @item.LoaiCLB
                                                </a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    @item.TenCLB
                                                </a>
                                            </td>
                                            <td>
                                                @item.LienHe
                                            </td>
                                            <td>
                                                @item.FanPage
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @item.NgayThanhLap
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.ID })">
                                                    <img src="@Url.Content(item.HinhCLB)" style="max-width: 200px; max-height: 100px; margin: 10px;" />
                                                </a>
                                            </td>



                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Loại Câu lạc bộ</th>
                                        <th>Tên Câu lạc bộ</th>
                                        <th>Liên hệ</th>
                                        <th>FanPage</th>
                                        <th>Email</th>
                                        <th>Ngày thành lập</th>
                                        <th>Ảnh đại diện</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
