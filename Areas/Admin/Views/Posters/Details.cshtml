@model ClubPortalMS.ViewModel.Poster.PosterViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->

    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Posters</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Posters</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Chi tiết Poster</h3>
                            </div>

                            <!-- /.card-header -->
                            <div class="card-body">

                                <table id="table1" class="table table-bordered table-striped">
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <td>@Html.DisplayFor(model => model.TenPoster)</td>
                                    </tr>
                                    <tr>
                                        <th>Trạng thái hiển thị</th>
                                        <td> @Html.DisplayFor(model => model.Status)</td>
                                    </tr>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <td><img src="@Url.Content(Model.HinhAnh)" style="" /></td>
                                    </tr>
                                </table>
                                <div class="row" style="margin:1% 0 0 0">
                                    <div class="col-sm-6"  style="margin:2% 0 0 0">
                                        @Html.ActionLink("Quay lại", "Index")
                                    </div>
                                    <div class="col-sm-6" >
                                        <a style="float:right" data-toggle="modal" data-target="#modal-danger" class="btn btn-app bg-danger">
                                            <i class="fa fa-trash" aria-hidden="true"></i> Xóa
                                        </a>
                                        <a style="float:right" class="btn btn-app bg-info" href="@Url.Action( "Edit", new { id = Model.ID })">
                                            <i class="fas fa-edit"></i> Chỉnh sửa
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div> 
            </div>
        </section>
    </div>

    <div class="modal fade" id="modal-danger">
        <div class="modal-dialog">
            <div class="modal-content bg-danger">
                <div class="modal-header">
                    <h4 class="modal-title">Cẩn thận!!</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="background-color:white; color:black">
                    <p>Không thể khôi phục dữ liệu nếu đã xóa&hellip;</p>
                </div>
                <div class="modal-footer justify-content-between" style="background-color:white">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy bỏ</button>
                    <a type="button" class="btn  btn-danger" href="@Url.Action( "DeleteConfirmed", new { id = Model.ID })">Xóa</a>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>